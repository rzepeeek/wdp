// ord i chr

A - 65
B - 66

a - 97
b - 98

print(ord('A')) --> 65
print(chr(65)) --> 'A'

// Litere wystepujaca najczesciej w lancuchu podanym jako argument. Jezeli jest kilka to funckja moze zwrocic dowolna z nich

def najczestsza(slownik):
    return max(set(slownik), key=slownik.count)

slownik = 'Ala ma kota'
wynik = najczestsza(slownik)
print(najczestsza(slownik))

// 2 rozwiazanie

def mind(d):
    kluczmin = next(iter(d))
    for item in d:
        if d[iter] < d[kluczmin]:
            kluczmin = item
    return kluczmin

print(mind(kluczmin))

// program ktory wczytuje liczby podowane przez uzytkowanika dodaje je do slownika i okresla liczbe ich wystapien w razie podania elementu niebedacego liczba calkowita program ma wypisac odpowiedni
// komunikat i kontynuowac dzialanie po nacisnieciu klawisza <enter> bez uprzedniego podania wartosci program ma wypisac slownik i zakonczyc zadanie

def main():
    liczby = []
    
    while True:
        try:
            liczba = input("Podaj liczbe calkowita lub wcisnij enter aby zakonczyc: ")
            if liczba == ""
                break

def czytaj(nazwa_pliku):
    slownik = {}
    
    with open(nazwa_pliku, 'r') as plik:
        linie = plik.readlines()
        
    for linia in linie:
        linia = linia.strip()
        if linia and linia[0].isalpha():
            litera = linia[0].lower()
            slownik[litera] = slownik.get(litera, 0) + 1
            
    return slownik

def main():
    nazwa_pliku = 'grzyb.txt'
    
    try:
        slownik = czytaj(nazwa_pliku)
        
        print("Wynik:")
        for litera, ilosc in slownik.items():
            print(f"{litera}: {ilosc}")
            
    except FileNotFoundError:
        print(f"Plik o nazwie {nazwa_pliku} nie zostal znaleziony.")
        
main()

from collections import defaultdict

def tworz(nazwa_pliku):
    slownik = defaultdict(int)
    
    with open(nazwa_pliku, 'r') as plik:
        for linia in plik:
            elementy = linia.strip().split()
            for element in elementy:
                if element.isdigit():
                    slownik[int(element)] += 1
                    
    return slownik

def main():
    nazwa_pliku = 'grzyb.txt'
    
    try:
        slownik = tworz(nazwa_pliku)
        
        print("Wynik:")
        for liczba, ilosc in slownik.items():
            print(f"{liczba}: {ilosc}")
            
    except FileNotFoundError:
        print(f"Plik o nazwie {nazwa_pliku} nie zostal odnaleziony.")
        
main()
